#frontend

style = Style(
	{
		backgroundColor: "#00f"
		padding: "10px"
	}
)

style2 = Style(
	{
		backgroundColor: "#0f0"
		padding: "9px"
	}
)

count = 0

function doRender()
	class Container extends Component
		function render()
			return <div
				style=style2
				onClick=function()
					count ++
					doRender(

					)
			>
				this.children
			</div>

	app = <div
		style=style
	>
		<Container>
			"Total Count:" + count
		</Container>
	</div>

	render(
		app
	)

doRender(

)